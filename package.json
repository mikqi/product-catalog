{
  "name": "product-catalog",
  "version": "1.0.0",
  "author": "Muhammad Rivki <Muhammad.Rivki@live.com>",
  "license": "MIT",
  "scripts": {
    "dev": "nodemon",
    "build": "next build && tsc --project tsconfig.server.json",
    "start": "cross-env NODE_ENV=production node dist/index.js",
    "lint:client": "tslint -c tslint.json '{components,layouts,pages,interfaces}/**/*.{ts,tsx}' --fix",
    "lint:server": "tslint -c tslint.json '{server,interfaces}/**/*.{ts,tsx}' --fix"
  },
  "dependencies": {
    "@zeit/next-css": "^1.0.1",
    "antd-mobile": "^2.2.13",
    "axios": "^0.18.1",
    "babel-plugin-import": "^1.11.2",
    "express": "^4.17.1",
    "faker": "^4.1.0",
    "morgan": "^1.9.1",
    "next": "^8.1.0",
    "querystring": "^0.2.0",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-slick": "^0.24.0",
    "slick-carousel": "^1.8.1"
  },
  "devDependencies": {
    "@types/express": "^4.16.1",
    "@types/faker": "^4.1.5",
    "@types/morgan": "^1.7.35",
    "@types/next": "^8.0.5",
    "@types/react": "^16.8.17",
    "@types/react-dom": "16.8.4",
    "@types/react-slick": "^0.23.4",
    "@zeit/next-typescript": "^1.1.1",
    "cross-env": "^5.2.0",
    "file-loader": "^3.0.1",
    "husky": "^2.3.0",
    "lint-staged": "^8.1.7",
    "nodemon": "^1.19.1",
    "ts-node": "^8.1.0",
    "tslint": "^5.16.0",
    "tslint-config-prettier": "^1.18.0",
    "tslint-react": "^4.0.0",
    "typescript": "^3.4.5",
    "url-loader": "^1.1.2"
  },
  "lint-staged": {
    "{components,layouts,pages,interfaces}/**/*.{ts,tsx}": [
      "yarn lint:client",
      "git add"
    ],
    "server/**/*.{ts,tsx}": [
      "yarn lint:server",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "cross-env NODE_ENV=development lint-staged"
    }
  }
}
